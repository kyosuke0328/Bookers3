<div class="body">
	<% if flash[:notice] %>
      <div class="flash">
        <%= flash[:notice] %>
      </div>
    <% end %>
  <div class="container">
     <p class="notice"></p>
     		<div class="error_messages">
				<% if @new_book.errors.any? %>
				    <div class="error_explanation">
				      <h2><%= @new_book.errors.count %>errors prohibited this book from being saved:</h2>
				      <ul>
				    <% @new_book.errors.full_messages.each do |message| %>
				          <li><%= message %></li>
				    <% end %>
				      </ul>
				    </div>
				<% end %>
			</div> 
      	<div class="row">
          	<div class="col-xs-3">
		    	<h2>User info</h2>
		    <%= attachment_image_tag current_user , :profile_image , fallback: "no_image.jpg" %>
	    	<table class="table">
      			<tbody>
                    <tr>
                        <th>name</th>
                        <th><%= @user.name %><th>
                    </tr>
                    <tr>
                        <th>introduction</th>
                        <th><%= @user.introduction %></th>
                    </tr>
              	</tbody>
	        </table>
	            <p>
	                <td><%= link_to "edit", edit_user_path(current_user),class:'col-xs-12 btn btn-default glyphicon glyphicon-wrench edit_user_19746' %></td> 
	            </p>
			<h2>New book</h2>
			<!-- form_for部分 -->
			<%= form_for(@new_book) do |f| %>
				 <h4>Title</h4>
				 <%= f.text_field :title %>
				 <h4>opinion</h4>
				 <%= f.text_area :body %>
				 <p>
				 	<%= f.submit 'Create Book',class:'btn btn-primary col-xs-15' %>
				 </p>
			<% end %>
	</div>

				<div class="col-xs-9">
					<h2>Books</h2>
						<table class="table table-hover table-inverse">
							<thead>
								<tr>
									<th></th>
									<th>Title</th>
									<th>Opinion</th>
									<th colspan="3"></th>
								</tr>
							</thead>
								<tbody>
									<% @books.each do |b| %>
										<tr>
											<td><%= attachment_image_tag b.user , :profile_image , fallback: "no_image.jpg" %></td>
											<td><%= link_to book_path(b) do %><%= b.title %>
												<% end %>
											</td>
											<td><%= b.body %></td>
										</tr>
									<% end %>
								</tbody>
					</table>
				</div>
			</div>		
		</div>

	</div>
</div>